<%- include('partials/header.ejs') %>

<body>
  <%- include('partials/navbar.ejs') %>

  <strong>
    <a href="/" class="voltar-P">← Voltar</a>
  </strong>

  <div class="container">
    <h3><%= pergunta.titulo %></h3>
    <legend><%= pergunta.descricao %></legend>
    <input type="hidden" name="pergunta" value="<%= pergunta.id %>" />
    <hr />
    <h4>Resposta</h4>
    <% resposta.forEach(resposta => { %>
    <div class="card-body">
      <legend><%= resposta.corpo %></legend>
    </div>
    <% }) %>
    <hr />
    <div class="content">
      <h3 id="msgRating">Você gostou da charada?</h3>

      <legend>Desde já agradecemos sua votação!</legend>

      <div class="avaliacao">
        <div class="opcoes">1</div>
        <div class="opcoes">2</div>
        <div class="opcoes">3</div>
        <div class="opcoes">4</div>
        <div class="opcoes">5</div>
      </div>

      <button id="enviarVoto">ENVIAR</button>

      <script src="/js/script.js"></script>
    </div>
  </div>
  <%- include('partials/rodape.ejs') %>
</body>
<%- include('partials/footer.ejs') %>
